{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true, // ako je greska nadjena nece ga kompajlovat u .js
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true, // izbacuje gresku ako ima neiskoriscenih parametara funkcije
    "noUnusedLocals": true, // izbacuje gresku ako ima neiskoriscenih varijabli
    "strictNullChecks": true // proverava Null type (type error)
  }
}
